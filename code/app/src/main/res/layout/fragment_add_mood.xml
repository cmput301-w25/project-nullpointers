            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_bin"
                android:padding="12dp"
                >

                <TextView
                    android:id="@+id/tvTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time (picker)"
                    android:textSize="12sp"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:00PM"
                    android:textSize="16sp"
                    android:textColor="#455234"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_bin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ReasonLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reason Why (max 20 chars / 3 words):"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="#ffffff"
                    android:hint="Please type your thoughts here..."
                    android:inputType="textMultiLine"
                    android:backgroundTint="#d5e0cb"
                    android:maxLength="20"
                    android:maxLines="3"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/AttachPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#AFBC9E"
                    android:padding="8dp"
                    android:text="Attach Photo Instead ( &lt; 65536 bytes )"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/rounded_bin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSocialSituation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social Situation"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgSocialSituation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp"
                    android:weightSum="4">

                    <RadioButton
                        android:id="@+id/rbAlone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alone"
                        android:textSize="10sp"
                        android:textColor="@color/textColor"
                        android:gravity="center" />

                    <RadioButton
                        android:id="@+id/rbOneOnOne"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="One-On-One"
                        android:textSize="10sp"
                        android:textColor="@color/textColor"
                        android:gravity="center" />

                    <RadioButton
                        android:id="@+id/rbGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Group"
                        android:textSize="10sp"
                        android:textColor="@color/textColor"
                        android:gravity="center" />

                    <RadioButton
                        android:id="@+id/rbCrowd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Crowd"
                        android:textColor="@color/textColor"
                        android:textSize="10sp"
                        android:gravity="center" />
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAttachLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="Attach Location (Optional)"
                        android:backgroundTint="#dfead0"
                        android:textColor="@color/textColor" />

                    <ImageView
                        android:id="@+id/ivMap"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:src="@drawable/ic_map"
                        app:tint="#64a9e5" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnSaveEntry"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="SAVE ENTRY"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:textStyle="bold"
            android:background="@drawable/green_outline_button" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="CANCEL"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:textStyle="bold"
            android:background="@drawable/green_outline_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
