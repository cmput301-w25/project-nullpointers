<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- User Section -->
        <EditText
            android:id="@+id/editTextUserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter User ID (if available)"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter User Name (for adding user)"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/buttonAddUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add User" />

        <Button
            android:id="@+id/buttonGetUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get User by ID" />

        <!-- Search by Username Section -->
        <EditText
            android:id="@+id/editTextSearchUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search User by Username"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/buttonGetUserByUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get User by Username" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="8dp" />

        <!-- Mood Section -->
        <EditText
            android:id="@+id/editTextMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mood Type (e.g., Happy, Sad)"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextMoodDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mood Description"
            android:inputType="text"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/buttonAddMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Mood" />

        <Button
            android:id="@+id/buttonRetrieveHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrieve Mood History" />

        <Button
            android:id="@+id/buttonQueryEmotional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Query by Mood Type" />

        <Button
            android:id="@+id/buttonQueryTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Query Last 7 Days" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="8dp" />

        <!-- Results Section -->
        <TextView
            android:id="@+id/textViewResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results will appear here"
            android:textSize="16sp"
            android:textColor="#000000"
            android:padding="8dp"
            android:background="#E0E0E0"
            android:minHeight="100dp" />

    </LinearLayout>
</ScrollView>
